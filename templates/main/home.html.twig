{% extends 'base.html.twig' %}

{% block title %}Au raw home{% endblock %}

{% block body %}
<div class="top-part__container">
    <div id="promo">
               <!-- Slideshow container -->
                <div class="slideshow-container">

                    <!-- Full-width images with number and caption text -->
                
                    <div class="mySlides fade">
                        <div class="numbertext">1 / 4</div>
                            <img src="{{ asset('static_pics/Carousel/17_icon.png') }}">
                        <div class="text">Chocolate Raspberry Bites</div>
                    </div>
                
                    <div class="mySlides fade">
                        <div class="numbertext">2 / 4</div>
                            <img src="{{ asset('static_pics/Carousel/19_icon.png') }}">
                        <div class="text">Chocolate Pistachio Truffles</div>
                    </div>

                    <div class="mySlides fade">
                        <div class="numbertext">3 / 4</div>
                            <img src="{{ asset('static_pics/Carousel/3_icon.png') }}">
                        <div class="text">Light Creamy Cupcake</div>
                    </div>

                    <div class="mySlides fade">
                        <div class="numbertext">4 / 4</div>
                            <img src="{{ asset('static_pics/Carousel/7_icon.png') }}">
                        <div class="text">Plum Seed Bites</div>
                    </div>
                    <!-- Next and previous buttons -->
                    <a class="prev" onclick="plusSlides(-1)">&#10094;</a>
                    <a class="next" onclick="plusSlides(1)">&#10095;</a>
                </div>
                
                <!-- The dots/circles -->
                <div style="text-align:center">
                    <span class="dot" onclick="currentSlide(1)"></span>
                    <span class="dot" onclick="currentSlide(2)"></span>
                    <span class="dot" onclick="currentSlide(3)"></span>
                    <span class="dot" onclick="currentSlide(4)"></span>
                </div>
            </div>

           
            

            <div id="sections">
                <div class="sections__tiles">
                    <div id="selection gluten-free">
                        <img src="{{ asset('static_pics/gluten-free.png') }}" alt="gluten-free desserts selection">
                    </div>
                    
                    <div id="selection nuts-free">
                        <img src="{{ asset('static_pics/nuts-free.png') }}" atl="no nuts desserts selection">
                    </div>
<!--
                    <div id="selection cocoa-free">
                        <img src="assets/Product-pictures/Final/cocoa-free.png" alt="cocoa-free desserts selection">
                    </div>
-->
                    <div id="selection low-cal">
                        <img src="{{ asset('static_pics/low-cal.png') }}" alt="low-calorie dessers selection">
                    </div>
            </div>
        </div>
</div>

<div class="bottom-part__container">
{% for product in products %}
    <a href="{{ path('product', {'id': product.id}) }}" class="product">
        <div class="product-item">
            <img src="{{ asset('uploads/images/products/'~ product.icon) }}" atl="{{ product.imgAlt }}">
            <div class="name">
                <h1>{{ product.title }}</h1>
            </div>
            <div class="description">
                <p class="product-description">{{ product.shortDescription }}</p>
                <p class="product-price">{{ product.priceEuro }}<sup>{{ product.priceCentime }}</sup> &euro;</p>
            </div>
        </div>
    </a>
{% endfor %}
</div>
{% endblock %}
